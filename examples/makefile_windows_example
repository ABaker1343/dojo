CC=g++ --std=c++20

GLFW_PATH=C:\libs\glfw-3.3.8.bin.WIN64\glfw-3.3.8.bin.WIN64
GLM_PATH=..\glm
FREETYPE_PATH=C:\libs\ft2130\freetype-2.13.0
FREETYPE_DLL=D:\freetype

FLAGS=-Wall -L..\lib\ -ldojo -I. -Wl,-rpath=..\lib\ -L$(FREETYPE_DLL) -L$(GLFW_PATH)\lib-mingw-w64 -lglfw3 -lgdi32 -lopengl32 -lfreetype -I$(GLFW_PATH)\include -I$(GLFW_PATH) -I$(FREETYPE_PATH)\include -I$(GLM_PATH)

example: example.cpp
	$(CC) example.cpp -g -o example.exe $(FLAGS)

walker:
	$(CC) walker.cpp -g -o walker $(FLAGS)

clean:
	rm example.exe
