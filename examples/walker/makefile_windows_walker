CC=g++ --std=c++20

GLFW_PATH=C:\libs\glfw-3.3.8.bin.WIN64\glfw-3.3.8.bin.WIN64
GLM_PATH=C:\libs\glm-0.9.8.5\glm
FREETYPE_PATH=C:\libs\ft2130\freetype-2.13.0
FREETYPE_DLL=D:\freetype

FLAGS=-Wall -L.. -ldojo -I. -Wl,-rpath=.. -L$(FREETYPE_DLL) -L$(GLFW_PATH)\lib-mingw-w64 -lglfw3 -lgdi32 -lopengl32 -lfreetype -I$(GLFW_PATH)\include -I$(GLFW_PATH) -I$(FREETYPE_PATH)\include

SOURCE=walker.cpp menu.cpp game.cpp main.cpp

OBJ=main.o game.o walker.o menu.o

walker: $(SOURCE)
	$(CC) $(FLAGS) walker.cpp game.cpp main.cpp menu.cpp -o walker.exe

game: $(OBJ)
	$(CC) -o $@ $^ $(FLAGS)

%.o: %.c
	$(CC) -c -o $@ $< $(FLAGS)

clean:
	rm walker
